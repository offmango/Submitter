<h1>Listing users</h1>

<table>
  <tr>
	<th></th>
    <th>Name</th>
    <th>Netid</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%= image_tag user.user_photo.url(:small_thumb) %></td>
    <td><%= user.name %></td>
    <td><%= user.netid %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

