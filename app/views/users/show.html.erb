<p id="notice"><%= notice %></p>

<p>
	<td><%= image_tag @user.user_photo.url(:large_thumb) %></td>	
</p>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Netid:</b>
  <%= @user.netid %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>
<p>
